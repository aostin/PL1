axiom ::= principio medio ;

principio ::= MODULE ID PCOMA ;

medio ::= listaDeclaraciones  | seccionSubprogramas | listaDeclaraciones seccionSubprogramas;

listaDeclaraciones ::= seccionConstantes | seccionTipos | seccionConstantes seccionTipos | seccionVariables | seccionConstantes seccionVariables | seccionTipos seccionVariables | seccionConstantes seccionTipos seccionVariables;

seccionConstantes ::= CONST declaracionConstantes;

declaracionConstantes ::= ID IGUAL valorLiteral PCOMA declaracionConstantes| ID IGUAL valorLiteral PCOMA ;

//declaracionConstante ::= ID IGUAL valorLiteral PCOMA;

valorLiteral ::= TRUE | FALSE | CDIGITO;

seccionTipos ::= TYPE declaracionTipos;

declaracionTipos ::= declaracionTipo | declaracionTipo declaracionTipos;

declaracionTipo ::= ID IGUAL ARRAY ACOR CDIGITO PUNTOS CDIGITO CCOR OF tipoPrimitivo PCOMA;

tipoPrimitivo ::= INTEGER | BOOLEAN;


seccionVariables ::= VAR declaracionVariables;

//declaracionVariables ::= declaracionVariable | declaracionVariable declaracionVariables;
declaracionVariables ::= ID DOSPUNTOS pDerecha | ID COMA declaracionVariables;
pDerecha ::= DOSPUNTOS ID PCOMA | DOSPUNTOS tipoPrimitivo PCOMA;
//declaracionVariable ::= ID DOSPUNTOS pDerecha | ID COMA declaracionVariable;
//listaId ::= ID | ID COMA listaId;

seccionSubprogramas ::= expresiones PCOMA  | expresiones PCOMA seccionSubprogramas;
expresiones ::= APAREN expresiones CPAREN | expresion |  expresion operador expresiones;
expresion ::= NOT valorExpresion | valorExpresion expresiones  | valorExpresion ;
operador ::= POR | AND | MENOS | OR | MAYOR | IGUAL;
valorExpresion ::= ID operador | valorLiteral operador;

